<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black"
        android:paddingTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menu"
            android:src="@drawable/ic_menu"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:contentDescription="menu"
            android:backgroundTint="@color/black"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تسميع"
            android:textColor="#c9c9c9"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layoutDirection="rtl"
            android:fontFamily="@font/uthmanic_hafs"/>

        <Spinner
            android:id="@+id/sura_spinner"
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="25dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:dropDownWidth="200dp"
            android:overlapAnchor="true" />

    </LinearLayout>

    <com.raafat.revise.PagedTextView
        android:id="@+id/quran_content_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/gray"
        android:textAlignment="center"
        android:gravity="top|center"
        android:elevation="10dp"
        android:fontFamily="@font/hafs_smart"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container"
        app:layout_constraintVertical_bias="0.5" />


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#000000"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <ImageButton
            android:id="@+id/next_aya"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:paddingEnd="25dp"
            android:background="@drawable/ic_next"
            android:contentDescription="Next"
            android:elevation="10dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:translationZ="32dp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layoutDirection="rtl"
            app:trackColorActive="@color/white"
            app:tickColor="@color/black"
            app:thumbColor="@color/white"
            android:stepSize="1"
            android:value="1"
            android:valueFrom="1"
            app:haloColor="@android:color/transparent"
            app:labelBehavior="gone"
            tools:valueTo="7" />

        <ImageButton
            android:id="@+id/previous_aya"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:paddingEnd="25dp"
            android:background="@drawable/ic_previous"
            android:contentDescription="Previous"
            android:elevation="10dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:translationZ="32dp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>